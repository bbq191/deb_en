{
  "update.showReleaseNotes": false,
  "search.followSymlinks": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": true,
  "window.zoomLevel": -1,
  "window.commandCenter": false,
  "window.density.editorTabHeight": "compact",
  "workbench.editor.navigationScope": "editorGroup",
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "readme",
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "top",
  "workbench.editor.enablePreview": false,
  "workbench.colorTheme": "Default Dark+",
  // vim statusBar 控制自动生成
  "workbench.colorCustomizations": {
    "statusBar.background": "#8FBCBB",
    "statusBar.noFolderBackground": "#8FBCBB",
    "statusBar.debuggingBackground": "#8FBCBB",
    "statusBar.foreground": "#434C5E",
    "statusBar.debuggingForeground": "#434C5E"
  },
  "zenMode.hideLineNumbers": false,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.fontFamily": "'Iosevka Nerd Font','Source Han Sans SC'",
  "terminal.integrated.fontSize": 17,
  "terminal.integrated.defaultLocation": "editor",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.addMissingImports": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.accessibilitySupport": "off",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "solid",
  "editor.cursorSurroundingLines": 5,
  "editor.fontFamily": "'Iosevka Nerd Font','Source Han Sans SC'",
  "editor.fontLigatures": "'calt','zero'", // 参考 https://github.com/JetBrains/JetBrainsMono/wiki/OpenType-features
  "editor.fontSize": 17,
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "editor.suggest.insertMode": "replace",
  "editor.dragAndDrop": false,
  "editor.suggestFontSize": 15,
  "editor.scrollBeyondLastLine": false,
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "files.exclude": {
    "**/node_modules": true
  },
  "prettier.semi": false,
  "prettier.singleAttributePerLine": true,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "debug.internalConsoleOptions": "neverOpen",
  "debug.console.fontSize": 15,
  "debug.showBreakpointsInOverviewRuler": true,
  "debug.allowBreakpointsEverywhere": true,
  "debug.openDebug": "neverOpen",
  "sortJSON.orderOverride": [
    "name",
    "version",
    "main",
    "module",
    "types",
    "typings",
    "files",
    "publishConfig",
    "repository",
    "scripts",
    "prefix",
    "description",
    "body"
  ],
  "sortJSON.orderUnderride": [
    "resolutions",
    "dependencies",
    "devDependencies",
    "peerDependencies",
    "cSpell.userWords"
  ],
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "errorLens.fontStyleItalic": true,
  "lldb.library": "/Applications/Xcode-beta.app/Contents/SharedFrameworks/LLDB.framework/Versions/A/LLDB",
  "lldb.launch.expressions": "native",
  "lldb.launch.terminal": "integrated",
  "lldb.launch.sourceLanguages": ["rust"],
  "evenBetterToml.formatter.allowedBlankLines": 1,
  "evenBetterToml.formatter.alignComments": true,
  "evenBetterToml.formatter.alignEntries": true,
  "evenBetterToml.formatter.columnWidth": 80,
  "path-intellisense.showHiddenFiles": true,
  "rust-analyzer.check.command": "clippy",
  "git.ignoreLegacyWarning": true,
  "git.openRepositoryInParentFolders": "never",
  "git.autorefresh": false,
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.advanced": {},
  "github.copilot.chat.localeOverride": "zh-CN",
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "fixme",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],
  //VIM CONFIG----------------------------------------------------------------------------
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.normal": ["#8FBCBB", "#434C5E"],
  "vim.statusBarColors.insert": "#BF616A",
  "vim.statusBarColors.visual": "#B48EAD",
  "vim.statusBarColors.visualline": "#B48EAD",
  "vim.statusBarColors.visualblock": "#A3BE8C",
  "vim.statusBarColors.replace": "#D08770",
  "vim.statusBarColors.commandlineinprogress": "#007ACC",
  "vim.statusBarColors.searchinprogressmode": "#007ACC",
  "vim.statusBarColors.easymotionmode": "#007ACC",
  "vim.statusBarColors.easymotioninputmode": "#007ACC",
  "vim.statusBarColors.surroundinputmode": "#007ACC",
  "vim.surround": true,
  "vim.foldfix": true,
  "vim.highlightedyank.color": "rgba(230, 97, 89, 0.7)",
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.textColor": "white",
  "vim.hlsearch": true,
  "vim.useCtrlKeys": true,
  "vim.leader": "<space>",
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["j", "k"],
      "commands": ["workbench.action.files.save", "extension.vim_escape"]
    },
    {
      "before": ["<c-x>"],
      "commands": ["editor.action.clipboardCutAction"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["leader", "p"],
      "after": ["\"", "_", "d", "P"]
    },
    {
      "before": ["leader", "y"],
      "after": ["\"", "+", "y"]
    },
    {
      "before": ["leader", "d"],
      "after": ["\"", "_", "d"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["leader", "l", "g"],
      "commands": ["workbench.view.scm"]
    },
    {
      "before": ["leader", "p", "v"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["leader", "c"],
      "commands": ["workbench.panel.chat.view.copilot.focus"]
    },
    {
      "before": ["leader", "f", "s"],
      "commands": [
        "cursorWordStartLeft",
        "cursorWordEndRightSelect",
        "workbench.action.findInFiles"
      ]
    },
    {
      "before": ["leader", "s"],
      "commands": [
        "cursorWordStartLeft",
        "cursorWordEndRightSelect",
        "editor.action.startFindReplaceAction"
      ]
    },
    {
      "before": ["C-j"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["C-k"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["leader", "k"],
      "commands": ["editor.action.marker.nextInFiles"]
    },
    {
      "before": ["leader", "j"],
      "commands": ["editor.action.marker.prevInFiles"]
    },
    {
      "before": ["leader", "r"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["x"],
      "after": ["\"", "_", "x"]
    },
    {
      "before": ["leader", "s-y"],
      "after": ["\"", "+", "y", "$"]
    },
    {
      "before": ["leader", "d"],
      "after": ["\"", "_", "d"]
    },
    {
      "before": ["leader", "w"],
      "commands": [":w!"]
    },
    {
      "before": ["leader", "f"],
      "commands": ["editor.action.formatDocument"]
    }
  ]
}
